{
    "default-suites": "unit"
    , "testsuites": {
        "unit": {
            "type": "unit"
            , "bootstrap": [
                "test/unit/bootstrap.php"
            ]
            , "directories": [
                "test/unit"
            ]
        }
        , "integration": {
            "type": "unit"
            , "bootstrap": [
                "test/integration/bootstrap.php"
            ]
            , "directories": [
                "test/integration"
            ]
        }
        , "acceptance": {
            "type": "spec"
            , "directories": [
                "test/acceptance"
            ]
            , "bootstrap": [
                "test/acceptance/bootstrap.php"
            ]
            , "exclude": {
                "glob": [
                    "test/acceptance/Fixtures/**/*.php"
                ]
            }
        }
    }
}
