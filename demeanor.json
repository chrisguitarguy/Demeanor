{
    "default-suites": "unit"
    , "testsuites": {
        "unit": {
            "type": "unit"
            , "bootstrap": [
                "test/unit/bootstrap.php"
            ]
            , "directories": [
                "test/unit"
            ]
        }
        , "acceptance": {
            "type": "spec"
            , "directories": [
                "test/acceptance"
            ]
            , "bootstrap": [
                "test/acceptance/bootstrap.php"
            ]
            , "exclude": {
                "glob": [
                    "test/acceptance/Fixtures/**/*.php"
                ]
            }
        }
    }
    , "coverage": {
        "reports": {
            "diff": "coverage/diff"
            , "html": "coverage/html"
            , "text": "coverage/coverage.txt"
        }
        , "directories": [
            "src"
        ]
    }
}
